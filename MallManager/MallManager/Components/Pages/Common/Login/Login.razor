@page "/Login"
@rendermode InteractiveServer

<MspLogin/>

@if (_submitted)
{
    <MudAlert Severity="_severity" Variant="Variant.Filled">
        @_message
    </MudAlert>
}

<EditForm Model="@_model" OnSubmit="OnValidSubmit" class="custom-mudform">
    <DataAnnotationsValidator/>
    <MudTextField Label="Email"
                  @bind-Value="_model.Email" For="@(() => _model.Email)"/>
    <MudTextField Label="Password" Type="Password"
                  @bind-Value="_model.Password" For="@(() => _model.Password)"/>
    <MudCheckBox Label="Remember me" @bind-Value="_model.RememberMe"></MudCheckBox>

    <MudButton Href="https://github.com/MudBlazor/MudBlazor"
               Target="_blank"
               Variant="Variant.Text"
               Color="Color.Secondary"
               Style="text-transform:none">
        Nie pamiętasz hasła?
    </MudButton>
    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary">Login</MudButton>
</EditForm>